<div class="column is-one-fifth">
  <div class="card box">
    <!-- Shows image if available -->
    <% if product.image.present? %>
      <div class="card-image">
        <figure class="image is-2-5">
          <%= image_tag product.image.variant(resize_to_limit:[250,250]) %>
        </figure>
      </div>
    <%end%>
    <!-- product name and price -->
    <div class="card-content has-text-centered mt-2">
      <%= link_to product do %>
        <p class="title is-5"><%= product.name %></p>
        <p class="subtitle"><%= number_to_currency product.price / 100 %></p>
      <%end%>
    </div>
    <footer class="card-footer">
      <%= button_to "Buy", checkout_create_path, params: {id: product.id}, remote: true   %>
    </footer>
  </div>
</div>
